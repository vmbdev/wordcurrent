    "knex": "^3.0.0",
    "nanoid": "^5.0.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "nodemon": "^2.0.20",
    "sass": "^1.97.1",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue": "^3.2.45",
    "vue-i18n": "^11.2.7"
